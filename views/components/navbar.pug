link(rel="stylesheet", href="/stylesheets/navbar.css")

nav.navbar.navbar-expand-sm.bg-dark.navbar-dark#navbar-div
    ul.navbar-nav.mr-auto
        a.navbar-brand(href="/") ESN
        li.nav.nav-item
            a.nav-link#nav_users(href="/users") Users
        if user.privilege_level != 'Citizen'
            li.nav.nav-item
                a.nav-link#nav_announcements(href="/announcements") Announcements
        li.nav.nav-item
            a.nav-link#nav_guides(href="/guides") Guides
        li.nav.nav-item
            a.nav-link#nav_resource(href="/resourceMap") Resource Map 
        li.nav.nav-item
            a.nav-link#nav_emergency(href="/emergency_message") Emergency Message
        li.nav.nav-item.dropdown#dropdown-li
            button#user_profile.btn.btn-info.dropdown-toggle(type='button', data-toggle='dropdown', aria-hasgroup='true', aria-expanded='false')
                | #{user.displayname}
            .drop-menu.dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuButton')
                a.dropdown-item(href='/users/' + user.username) Your profile
                a.dropdown-item(href="/signout") Sign out

    div.dropdown
        form#navbar_search_form.form-inline(hidden, action="#")
            input.form-control#search-input(type="search" placeholder="Search" aria-label="Search")
            button.btn.btn-outline-success.my-2.my-sm-0#search-btn(type="submit") Search
